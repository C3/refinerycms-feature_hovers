<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(feature_hover) -%>">
  <span class='title'>
    <%= feature_hover.title %>

  </span>
  <span class='actions'>
    
    <%= link_to refinery_icon_tag("application_go.png"), refinery.feature_hovers_feature_hover_path(feature_hover),
        :title => t('.view_live_html'),
        :target => "_blank" %>
    
    <%= link_to refinery_icon_tag("application_edit.png"), refinery.edit_feature_hovers_admin_feature_hover_path(feature_hover),
         :title => t('.edit') %>
    <%= link_to refinery_icon_tag("delete.png"), refinery.feature_hovers_admin_feature_hover_path(feature_hover),
        :class => "cancel confirm-delete",
        :title => t('.delete'),
        :confirm => t('message', :scope => 'refinery.admin.delete', :title => feature_hover.title),
        :method => :delete %>
  </span>
</li>
