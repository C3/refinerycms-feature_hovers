<ul>
  <% if ::Refinery::FeatureHovers::Admin::FeatureHoversController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.feature_hovers_admin_feature_hovers_path %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), refinery.new_feature_hovers_admin_feature_hover_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? && ::Refinery::FeatureHovers::Admin::FeatureHoversController.sortable? && ::Refinery::FeatureHovers::FeatureHover.any? %>
  <li>
    <%= link_to t('.reorder', :what => "Feature Hovers"),
                 refinery.feature_hovers_admin_feature_hovers_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Feature Hovers"),
                 refinery.feature_hovers_admin_feature_hovers_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>
